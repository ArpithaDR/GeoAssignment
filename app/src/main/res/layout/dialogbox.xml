<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="201dp"
        android:layout_height="337dp"
        android:orientation="vertical"
        android:layout_gravity="left|bottom"
        android:layout_weight="0.01">

        <RelativeLayout
            android:id="@+id/gym"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/gymImage"
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:gravity="bottom"
                android:layout_marginLeft="10dp"
                android:src="@drawable/calender_icon"/>

            <TextView
                android:id="@+id/gymtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gym"
                android:background="@drawable/rounded_edge"
                android:layout_toRightOf="@+id/gymImage"
                android:layout_centerVertical="true"
                android:padding="12dp"
                android:layout_marginLeft="10dp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/grocery"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/groceryImage"
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:gravity="bottom"
                android:layout_marginLeft="10dp"
                android:src="@drawable/dashboard_icon"/>

            <TextView
                android:id="@+id/grocerytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grocery Store"
                android:background="@drawable/rounded_edge"
                android:layout_toRightOf="@+id/groceryImage"
                android:padding="12dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hospital"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/hospitalImage"
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:gravity="bottom"
                android:layout_marginLeft="10dp"
                android:src="@drawable/dashboard_icon"/>

            <TextView
                android:id="@+id/hospitaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital"
                android:background="@drawable/rounded_edge"
                android:layout_toRightOf="@+id/hospitalImage"
                android:padding="12dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/school"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/schoolImage"
                android:layout_width="@dimen/filter_image"
                android:layout_height="@dimen/filter_image"
                android:gravity="bottom"
                android:layout_marginLeft="10dp"
                android:src="@drawable/calender_icon"/>

            <TextView
                android:id="@+id/schooltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School"
                android:background="@drawable/rounded_edge"
                android:layout_toRightOf="@+id/schoolImage"
                android:padding="12dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cross"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="@dimen/image_filter"
                android:layout_height="@dimen/image_filter"
                android:layout_alignParentLeft="true"
                android:gravity="bottom"
                android:layout_marginRight="@dimen/cross_margin"
                android:src="@drawable/cross_icon"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>