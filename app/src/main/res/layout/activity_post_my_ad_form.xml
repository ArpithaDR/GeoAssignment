<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_my_ad_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.appy.locationidentifier.PostMyAdForm">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/post_ad_subject"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        android:id="@+id/post_ad_subject"
         />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:hint="@string/post_ad_address"
        android:ems="10"
        android:layout_below="@+id/post_ad_subject"
        android:layout_alignLeft="@+id/post_ad_subject"
        android:layout_alignStart="@+id/post_ad_subject"
        android:layout_marginTop="16dp"
        android:id="@+id/post_ad_address" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="@string/post_ad_price"
        android:ems="10"
        android:layout_below="@+id/post_ad_address"
        android:layout_alignLeft="@+id/post_ad_address"
        android:layout_alignStart="@+id/post_ad_address"
        android:layout_marginTop="16dp"
        android:id="@+id/post_ad_price" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/post_ad_spots"
        android:ems="10"
        android:layout_below="@+id/post_ad_price"
        android:layout_alignLeft="@+id/post_ad_price"
        android:layout_alignStart="@+id/post_ad_price"
        android:layout_marginTop="16dp"
        android:id="@+id/post_ad_spots" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="@string/post_ad_start_date"
        android:ems="10"
        android:layout_below="@+id/post_ad_spots"
        android:layout_alignLeft="@+id/post_ad_spots"
        android:layout_alignStart="@+id/post_ad_spots"
        android:layout_marginTop="10dp"
        android:id="@+id/post_ad_start_date" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="@string/post_ad_end_date"
        android:ems="10"
        android:layout_below="@+id/post_ad_start_date"
        android:layout_alignLeft="@+id/post_ad_start_date"
        android:layout_alignStart="@+id/post_ad_start_date"
        android:layout_marginTop="29dp"
        android:id="@+id/post_ad_end_date" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="@string/post_ad_desc"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/post_ad_end_date"
        android:layout_alignLeft="@+id/post_ad_end_date"
        android:layout_alignStart="@+id/post_ad_end_date"
        android:id="@+id/post_ad_desc"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="@string/post_ad_phone"
        android:ems="10"
        android:layout_below="@+id/post_ad_desc"
        android:layout_alignLeft="@+id/post_ad_desc"
        android:layout_alignStart="@+id/post_ad_desc"
        android:layout_marginTop="23dp"
        android:id="@+id/post_ad_phone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_focused"
        android:layout_below="@+id/post_ad_phone"
        android:layout_alignLeft="@+id/post_ad_phone"
        android:layout_alignStart="@+id/post_ad_phone"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="18dp"
        android:id="@+id/imageView" />


</RelativeLayout>
