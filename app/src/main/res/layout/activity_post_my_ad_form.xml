<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_my_ad_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.appy.locationidentifier.PostMyAdForm">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/post_ad_title"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="23dp"
            android:id="@+id/post_ad_title"
             />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:hint="@string/post_ad_address"
            android:ems="10"
            android:layout_below="@+id/post_ad_title"
            android:layout_alignLeft="@+id/post_ad_title"
            android:layout_alignStart="@+id/post_ad_title"
            android:layout_marginTop="16dp"
            android:id="@+id/post_ad_address" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:hint="@string/post_ad_aptNumber"
            android:ems="10"
            android:layout_below="@+id/post_ad_address"
            android:layout_alignLeft="@+id/post_ad_address"
            android:layout_alignStart="@+id/post_ad_address"
            android:layout_marginTop="16dp"
            android:id="@+id/post_ad_aptNumber" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:hint="@string/post_ad_city"
            android:ems="10"
            android:layout_marginTop="13dp"
            android:id="@+id/post_ad_city"
            android:layout_below="@+id/post_ad_aptNumber"
            android:layout_alignLeft="@+id/post_ad_aptNumber"
            android:layout_alignStart="@+id/post_ad_aptNumber" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:hint="@string/post_ad_state"
            android:ems="10"
            android:layout_marginTop="16dp"
            android:id="@+id/post_ad_state"
            android:layout_below="@+id/post_ad_city"
            android:layout_alignLeft="@+id/post_ad_city"
            android:layout_alignStart="@+id/post_ad_city" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:hint="@string/post_ad_zip"
            android:ems="10"
            android:layout_marginTop="13dp"
            android:id="@+id/post_ad_zip"
            android:layout_below="@+id/post_ad_state"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/post_ad_state"
            android:layout_alignStart="@+id/post_ad_state" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/post_ad_price"
            android:ems="10"
            android:layout_below="@+id/post_ad_zip"
            android:layout_alignLeft="@+id/post_ad_zip"
            android:layout_alignStart="@+id/post_ad_zip"
            android:layout_marginTop="16dp"
            android:id="@+id/post_ad_price" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/post_ad_spots"
            android:ems="10"
            android:layout_below="@+id/post_ad_price"
            android:layout_alignLeft="@+id/post_ad_price"
            android:layout_alignStart="@+id/post_ad_price"
            android:layout_marginTop="16dp"
            android:id="@+id/post_ad_spots" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="@string/post_ad_start_date"
            android:ems="10"
            android:layout_below="@+id/post_ad_spots"
            android:layout_alignLeft="@+id/post_ad_spots"
            android:layout_alignStart="@+id/post_ad_spots"
            android:layout_marginTop="10dp"
            android:id="@+id/post_ad_start_date" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="@string/post_ad_end_date"
            android:ems="10"
            android:layout_below="@+id/post_ad_start_date"
            android:layout_alignLeft="@+id/post_ad_start_date"
            android:layout_alignStart="@+id/post_ad_start_date"
            android:layout_marginTop="29dp"
            android:id="@+id/post_ad_end_date" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="@string/post_ad_desc"
            android:ems="10"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/post_ad_end_date"
            android:layout_alignLeft="@+id/post_ad_end_date"
            android:layout_alignStart="@+id/post_ad_end_date"
            android:id="@+id/post_ad_desc"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="@string/post_ad_phone"
            android:ems="10"
            android:layout_below="@+id/post_ad_desc"
            android:layout_alignLeft="@+id/post_ad_desc"
            android:layout_alignStart="@+id/post_ad_desc"
            android:layout_marginTop="23dp"
            android:id="@+id/post_ad_phone" />

        <Button
            android:text="@string/post_ad_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_ad_submit"
            android:onClick="submitAddress"
            android:layout_below="@+id/post_ad_phone"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/camera_button"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/post_ad_phone"
            android:layout_alignStart="@+id/post_ad_phone" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            android:id="@+id/gallery_button"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/camera_button"
            android:layout_toEndOf="@+id/camera_button" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
            android:layout_alignTop="@+id/post_ad_submit"
            android:layout_toEndOf="@+id/gallery_button"
            android:layout_marginStart="37dp"
            android:id="@+id/galleryImgV" />

    </RelativeLayout>
</ScrollView>

